setenv PATH         "${PATH}:${HOME}/.config/nvim"
setenv LC_CTYPE     "en_US.UTF-8"
setenv PRINTER      "op5"
setenv EDITOR       "vi"

# ignore case
set autolist = ambiguous
set complete = enhance
set autoexpand

# history
set history=2000	# number of commands saved in history
set savehist=(2000 merge) # also save history to file on logout

alias precmd "source ~/.config/.gitprompt.csh"

# private settings e.g. passwords
if (-e $HOME/.settings.private) source $HOME/.settings.private
